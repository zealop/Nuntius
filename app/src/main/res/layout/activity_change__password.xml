<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_1"
    android:weightSum="5"
    tools:context=".Change_Password">

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_height="wrap_content">
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_width="422dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nhập mật khẩu hiện tại"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_currentpass"
            android:layout_width="238dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:textColorHint="@color/colorPrimary"
            android:layout_weight="0.5"
            android:hint=" "
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nhập mật khẩu mới"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_newpass"
            android:layout_gravity="center"
            android:layout_width="238dp"
            android:layout_height="34dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_weight="0.5"
            android:hint=""
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nhập lại mật khẩu mới"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edit_confirmnewpass"
            android:layout_width="238dp"
            android:layout_height="34dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_weight="0.5"
            android:hint=" "
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_change_pass_real"
            android:layout_width="127dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/background_button"
            android:textStyle="bold|italic"
            android:text="Đổi mật khẩu"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>





</LinearLayout>